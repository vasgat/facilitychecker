{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Wage Gap",
  "width": 100,
  "height": 75,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "name": "Actual",
          "value": 49,
          "label": "Actual wage: 49%",
          "startAngle": 0,
          "endAngle": 3.0787608005179976
        },
        {
          "name": "Gap",
          "value": 51,
          "label": "Wage gap: 51%",
          "startAngle": 3.0787608005179976,
          "endAngle": 6.283185307179586
        }
      ],
      "transform": [
        {
          "type": "formula",
          "expr": "datum.name + ': ' + datum.value + '%'",
          "as": "label"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:mouseover",
          "update": "datum"
        },
        {
          "events": "rect:mouseout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "name"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "name"
      },
      "range": [
        "#72a8d6",
        "#27282a"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "name"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "tooltip": {
            "field": "label"
          },
          "cornerRadiusTopLeft": {
            "value": 5
          },
          "cornerRadiusTopRight": {
            "value": 5
          }
        },
        "update": {
          "fill": {
            "scale": "color",
            "field": "name"
          }
        }
      }
    }
  ]
}
